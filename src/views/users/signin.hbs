<div class="row">
    <div class="col-md-4 mx-auto" >
        <div class="card mt4 text-center">
            <div class="card-header">
                <h1>Account Login</h1>
            </div>
            <img src="/img/R.png" class=" rounded-circle mx-auto d-block m-4 logo" alt="Logo proyecto">
            <div class="card-body">
                <form action="/users/signin" method="POST">
                    <div class="form-group">
                        <input type="email" class="form-control m-1" name="email" placeholder="Email" autofocus>
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control m-1" name="password" placeholder="Password">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block m-1">
                            SigIn
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>