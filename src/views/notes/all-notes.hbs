<div class="row">
    {{#each notes}}
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title d-flex justify-content-between align-items-center ">
                        {{title}} <a href="/notes/edit/{{_id}}"><i class="fas fa-edit"></i></a>
                    </h4>
                    <p>{{description}}</p>
                    <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
                    <input type="hidden" name="_method" value="DELETE" >
                    <div class="d-grid gap-2  mx-auto">
                        <button class="btn btn-danger btn-bloc" type="submit">
                        Delete
                        </button>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    {{else}} 
        <div class="card mx-auto">
        <div class="card-body">
                <h1>Hello {{user.name}}</h1>
                <p class="lead" >There are not yet</p>
            <div class="d-grid gap-2">
                <a href="/notes/add" class="btn btn-success btn-block">Create One!</a>
            </div>
        </div>
        </div>
    {{/each}}
</div>